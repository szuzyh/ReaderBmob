<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 应用基础主题 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorMine</item>
        <item name="android:colorPrimaryDark">@color/colorMine</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#1E1E1E</item>
        <!--colorBackground 无效-->
        <!--<item name="android:colorBackground">@color/grey</item>-->
    </style>

    <style name="AppTheme.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>
    <style name="AppTheme.NoActionBar.Light" parent="AppTheme.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>

    <!--ThemeOverlay ：叠加的主题  ActionBar：用于ActionBar（ToolBar）-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!--日报故事 详细内容界面 ToolBar收缩固定时的标题样式-->
    <style
        name="MyCollapsingToolbarTextStyle"
        parent="@android:style/TextAppearance.DeviceDefault">

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!--日报故事 详细内容界面 ToolBar扩展时的标题样式-->
    <style
        name="MyExpandedToolbarTextStyle"
        parent="@android:style/TextAppearance.DeviceDefault">

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
    </style>
</resources>