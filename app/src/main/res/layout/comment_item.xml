<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:padding="20dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/readericon"
        android:id="@+id/comment_avatar_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="小鬼"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comment_author_tv"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_width="40dp"
            android:layout_height="20dp">
            <ImageView
                android:src="@mipmap/praise"
                android:id="@+id/comment_like_iv"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:textSize="18sp"
                android:text="0"
                android:paddingLeft="10dp"
                android:id="@+id/comment_like_tv"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <TextView
            android:textSize="18sp"
            android:text="@string/comment_example"
            android:layout_marginTop="10dp"
            android:layout_below="@id/comment_author_tv"
            android:id="@+id/comment_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/comments_reply_color"
            android:ellipsize="end"
            android:textSize="18sp"
            android:text="@string/comment_replay"
            android:layout_marginTop="3dp"
            android:visibility="gone"
            android:layout_below="@id/comment_content_tv"
            android:id="@+id/comment_content_replay_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_below="@id/comment_content_replay_tv"
            android:textSize="12sp"
            android:textColor="@color/comments_time_color"
            android:text="08-24 08:08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comment_time_tv"/>
        <TextView
            android:id="@+id/comment_expand_tv"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="展开"
            android:textColor="@color/comments_reply_color"
            android:textSize="15sp"
            android:background="@color/comments_expand_bg_color"
            android:layout_below="@+id/comment_content_replay_tv"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>